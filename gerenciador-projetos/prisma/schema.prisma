// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Premio {
  id           Int       @id @default(autoincrement())
  nome         String
  descricao    String
  ano          Int
  dataCriacao  DateTime  @default(now())
  dataInicial  DateTime
  dataFinal    DateTime
  projetos     Projeto[]
}

model Autor {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  cpf       String    @unique
  telefone  String
  createdAt DateTime  @default(now())
  projetos  Projeto[] @relation("AutoresProjeto")
}

model Avaliador {
  id         Int         @id @default(autoincrement())
  nome       String
  cpf        String      @unique
  email      String      @unique
  telefone   String
  createdAt  DateTime    @default(now())
  avaliacoes Avaliacao[]
}

model Projeto {
  id         Int         @id @default(autoincrement())
  titulo     String
  descricao  String
  createdAt  DateTime    @default(now())
  premioId   Int?
  autoresId  Int?
  premio     Premio?     @relation(fields: [premioId], references: [id])
  autores    Autor[]     @relation("AutoresProjeto")
  avaliacoes Avaliacao[]
}

model Avaliacao {
  id          Int       @id @default(autoincrement())
  projetoId   Int
  avaliadorId Int
  nota        Float
  comentario  String
  createdAt   DateTime  @default(now())
  avaliador   Avaliador @relation(fields: [avaliadorId], references: [id])
  projeto     Projeto   @relation(fields: [projetoId], references: [id])
}
